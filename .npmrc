# Always save exact versions in package.json (e.g. "1.2.3" not "^1.2.3")
save-exact=true

# Don't prompt for funding info during install
fund=false

# Don't run vulnerability audit on install (CI should run this separately)
audit=false

# Don't include optional dependencies (optional)
optional=false

# Use the default public npm registry
registry=https://registry.npmjs.org/

# Use env var for publishing from CI
//registry.npmjs.org/:_authToken=${NPM_TOKEN}
